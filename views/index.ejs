<html>
    <head>
        <title>Express messages</title>
        <link rel="stylesheet" href="/styles.css">
        <script src="/index.js" defer></script>
        
    </head>
    <body>
        <header>
             <h1 style="justify-self: center;align-self: flex-start; padding:  20px 0 20px 0;">Express-msg</h1>
        </header>
        <section class="msg-container">

            <h3 class="title"><%= title %></h3>
            <ul >
                
                <% messages.forEach((message)=>{ %>

                <a href="/message/<%= message.id %>" style="text-decoration: none">
                    <li class="msg-itm">
                        <div style="display: flex; flex-direction: row;">
                            <div style="font-size: 13px; color: rgb(164, 165, 168);display: inline;">from@</div>
                            <div class="msg-user" style="color: white;"><%= message.username %></div>  
                        </div>
                        <p class="msg-cntnt" style="color: white;"><%= message.text %></p>
                        <div style="font-size: 13px; color: rgb(164, 165, 168);">
                            <%= message.created_at %>
                        </div>
                    </li> 
                </a>   
                <% }); %>
            </ul>
            
            <button id="msg-add">
                add new message!
            </button>

        </section>
        <dialog id="msg-dialog">
            <form method="POST" action="/new" class="form-dlg">
                <label for="user" class="username-name">username:</label>
                <input name="user" type="text" placeholder="@user" class="username-input" required>
                <label for="msg" class="message-name" >message</label>
                <textarea name="msg" type="text" placeholder="your message ..." class="message-input" required></textarea>
                <button class="msg-btn">submit message</button>
                <button type="button" id="msg-close">close</button>
            </form>
        </dialog>

    </body>
</html>